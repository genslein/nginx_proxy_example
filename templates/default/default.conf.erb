http {
    server {
        listen 80;
        server_name localhost;

        access_log  /var/log/nginx/localhost.access.log;

        location /bing/ {
            proxy_pass http://www.bing.com/;
        }

        location /weather/ {
            proxy_set_header Host weather.com;
            proxy_redirect https://weather.com/weather/ http://localhost/weather/;
        }
    }
}