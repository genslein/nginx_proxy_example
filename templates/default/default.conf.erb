http {
    server {
        listen 80;
        server_name localhost;

        access_log  /var/log/nginx/localhost.access.log;

        location /bing/ {
            proxy_pass http://www.bing.com/;
        }

        location ~ \weather {
            rewrite ^ https://localhost$request_uri permanent;
            proxy_redirect off;
            proxy_pass https://weather.com/weather/;
        }
    }
}