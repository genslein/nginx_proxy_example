http {
    server {
        listen 80;
        server_name localhost;

        access_log  /var/log/nginx/localhost.access.log;

        location /bing/ {
            proxy_pass http://www.bing.com/;
        }

        location /weather/ {
            proxy_redirect http://localhost/weather/ https://localhost/weather/;
        }
    }

    server {
        listen 443 ssl;
        server_name localhost;

        location /weather/ {
            proxy_redirect off;
            proxy_pass https://weather.com/weather/;
        }
    }
}