server {
    listen 80;
    server_name $host;

    access_log  /var/log/nginx/localhost.access.log;

    location / {
        root   /var/www/nginx-default;
        index  index.html index.htm;
    }

    location /bing/ {
        proxy_pass http://www.bing.com/;
    }

    location /weather/ {
        proxy_pass https://weather.com/;
    }
}